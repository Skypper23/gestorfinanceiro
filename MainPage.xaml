<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GestorFinanceiro.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="25" BackgroundColor="White">

            <!-- Cabeçalho -->
            <Label Text="Gestor Financeiro" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Saldo Atual -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Saldo Atual" 
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <Label 
                       x:Name="SaldoAtual"
                       Text="0,00€" 
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <Label 
                       x:Name="TaxaSaldo"
                       Text="0%" 
                       TextColor="#4CAF50"
                       FontSize="14"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Botões (Agora com centralização perfeita) -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <!-- Botão Ganhos -->
                <Border Background="#22C55E"
                        WidthRequest="160"
                        HeightRequest="100"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                    <VerticalStackLayout Spacing="0" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="+" 
                               FontSize="28"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Adicionar Ganhos" 
                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="AddGanhos_Clicked"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Botão Despesas -->
                <Border Background="#EF4444"
                        WidthRequest="160"
                        HeightRequest="100"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                    <VerticalStackLayout Spacing="0" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="-" 
                               FontSize="28"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="Adicionar Despesas" 
                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="AddDespesas_Clicked"/>
                    </Border.GestureRecognizers>
                </Border>
            </HorizontalStackLayout>

            <!-- Divisor -->
            <BoxView HeightRequest="1" 
                     Color="#E0E0E0" 
                     HorizontalOptions="Fill"
                     Margin="0,10"/>

            <!-- Histórico -->
            <Label Text="Histórico" 
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <!-- Transações Recentes -->
            <Label Text="Transações Recentes" 
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,10,0,5"
                   TextColor="Black"/>

            <!-- Lista de Transações (Layout otimizado) -->
            <VerticalStackLayout Spacing="15">
                <!-- Transação 1 -->
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                    <Label 
                           x:Name="NomeTransacao1"
                           Text="Salário" 
                           FontAttributes="Bold"
                           Grid.Column="0" Grid.Row="0"
                           TextColor="Black"/>
                    <Label 
                           x:Name="HoraTransacao1"
                           Text="Hoje, 10:00" 
                           FontSize="12"
                           TextColor="#757575"
                           Grid.Column="0" Grid.Row="1"/>
                    <Label 
                           x:Name="ValorTransacao1"
                           Text="+ 3.000€" 
                           TextColor="#4CAF50"
                           FontAttributes="Bold"
                           Grid.Column="1" Grid.Row="0"
                           Grid.RowSpan="2"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Transação 2 -->
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                    <Label 
                           x:Name="NomeTransacao2"   
                           Text="Supermercado" 
                           FontAttributes="Bold"
                           Grid.Column="0" Grid.Row="0"
                           TextColor="Black"/>
                    <Label 
                           x:Name="HoraTransacao2"
                           Text="Ontem, 14:30" 
                           FontSize="12"
                           TextColor="#757575"
                           Grid.Column="0" Grid.Row="1"/>
                    <Label 
                           x:Name="ValorTransacao2"
                           Text="- 150€" 
                           TextColor="#F44336"
                           FontAttributes="Bold"
                           Grid.Column="1" Grid.Row="0"
                           Grid.RowSpan="2"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Transação 3 -->
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                    <Label 
                           x:Name="NomeTransacao3"
                           Text="Netflix" 
                           FontAttributes="Bold"
                           Grid.Column="0" Grid.Row="0"
                           TextColor="Black"/>
                    <Label 
                           x:Name="HoraTransacao3"
                           Text="Ontem, 09:00" 
                           FontSize="12"
                           TextColor="#757575"
                           Grid.Column="0" Grid.Row="1"/>
                    <Label 
                           x:Name="ValorTransacao3"
                           Text="- 15€" 
                           TextColor="#F44336"
                           FontAttributes="Bold"
                           Grid.Column="1" Grid.Row="0"
                           Grid.RowSpan="2"
                           VerticalOptions="Center"/>
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>