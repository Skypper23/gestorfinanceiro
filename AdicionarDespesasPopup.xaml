<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="GestorFinanceiro.AdicionarDespesasPopup"
    Size="300,400">

    <!-- Adicionei um Frame como container principal -->
    <Frame BackgroundColor="White"
           BorderColor="Transparent"
           CornerRadius="0"
           HasShadow="True"
           Padding="0">

        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="White">
            <Label Text="Adicionar Ganhos" 
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <Entry x:Name="NomeDespesasEntry"
                   TextColor="Black"
                   Placeholder="Nome (ex: Salário)"
                   BackgroundColor="White"
                   PlaceholderColor="Gray"/>

            <Entry x:Name="DespesasEntry"
                   TextColor="Black"
                   Placeholder="Despesas (ex: 100,00€)"
                   Keyboard="Numeric"
                   BackgroundColor="White"
                   PlaceholderColor="Gray"/>

            <DatePicker x:Name="DataPickerDespesas"
                       TextColor="Black"
                       Format="dd/MM/yyyy"
                       BackgroundColor="White"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Adicionar"
                        Background="#22C55E"
                        CornerRadius="10"
                        HeightRequest="50"
                        TextColor="White"
                        Clicked="OnAdicionarClicked"/>

                <Button Text="Cancelar"
                        Grid.Column="1"
                        Background="#EF4444"
                        CornerRadius="10"
                        HeightRequest="50"
                        TextColor="White"
                        Clicked="OnCancelarClicked"/>
            </Grid>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>